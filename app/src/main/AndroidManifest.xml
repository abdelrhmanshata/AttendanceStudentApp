<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.attendancestudentapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AttendanceStudentApp">
        <activity
            android:name=".Activity.Professor.ProfessorProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Professor.AttendingStudentsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Professor.ProfessorGenerateQrCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.AppInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Student.StudentProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Student.StudentScannerQrCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TableLectureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Auth.LoginOTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Student.StudentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Professor.ProfessorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.RegisterStudentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.RegisterProfessorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.OTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>